@model Views_Contact_Index
<div class="formaIslika" style="display:grid;align-items:center;grid-template-columns:1fr 1fr 1fr;">
    <div>
        <form onsubmit="return poruka()" style="margin-left:100px;">
            <label for="firstName">Ime:</label>
            <input type="text" id="firstName" name="firstName" required>

            <label for="lastName">Prezime:</label>
            <input type="text" id="lastName" name="lastName" required>

            <label>
                <input type="radio" name="gender" value="Muško"> Muško
            </label>
            <label>
                <input type="radio" name="gender" value="Žensko"> Žensko
            </label>
            <label>
                <input type="checkbox" name="subscribe" value="Da"> Svidja mi se sajt!
            </label>

            <button type="submit">Pošalji</button>
        </form>
    </div>
    <div>
        <img style="max-width:100%;max-height:90%;margin-left:150px;" src="images/trainingAssist.png" />
    </div>
</div>


<script type="text/javascript">
    function poruka() {
   
        const firstName = document.getElementById('firstName').value.trim();
        const lastName = document.getElementById('lastName').value.trim();

        if (!firstName || !lastName) {
            alert('Molimo Vas da unesete Ime i Prezime.');
            return false;
        }


        showAlert(firstName, lastName);

    
        return false;
    }

    function showAlert(firstName, lastName) {
        const genderOptions = document.getElementsByName('gender');
        let selectedGender = '';
        for (const option of genderOptions) {
            if (option.checked) {
                selectedGender = option.value;
                break;
            }
        }

      
        const isSubscribed = document.getElementsByName('subscribe')[0].checked;

     
        let alertMessage = 'Ime: ' + firstName +
            '\nPrezime: ' + lastName +
            '\nPol: ' + (selectedGender || 'Not specified') +
            '\nSvidja Vam se: ' + (isSubscribed ? 'Da' : 'Ne');

        alert(alertMessage);
    }
</script>


