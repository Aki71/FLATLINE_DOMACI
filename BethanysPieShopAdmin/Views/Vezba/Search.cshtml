@model VezbaSearchViewModel

<h2> Pretraži vežbe</h2>
<hr />

<form asp-controller="Vezba" asp-action="Search" method="get">
    <div class="mb-3">
        <label class="form-label">Trening</label>
        <select asp-for="SearchTrening" asp-items="Model.Treninzi" class="form-control">
            <option value="">All</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Search value</label>
        <input type="text" asp-for="SearchQuery" class="form-control" />
    </div>
    <input type="submit" value="Filter" class="btn btn-primary" />
</form>

@if (!Model.Vezbe.Any())
{
    <p>No results</p>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>

            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>Actions</th>
        </tr>
        @foreach (var vezba in Model.Vezbe)
        {

            <tr>
                <td>@vezba.VezbaId</td>
                <td>@vezba.VezbaName</td>
                <td>@vezba.Rekviziti</td>
                <td>
                    <a asp-action="Details" asp-route-id="@vezba.VezbaId">Details</a>
                    <a asp-action="Edit" asp-route-id="@vezba.VezbaId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@vezba.VezbaId">Delete</a>
                </td>
            </tr>
        }
    </table>
}
