@model Trening
<br></br>
<h2 >Detalji @Model.Name</h2>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vezbe)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Vezba</th>
                    <th>Rekviziti</th>
                </tr>
                @foreach (var vezba in Model.Vezbe)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(Trening => vezba.VezbaName)
                        </td>
                        <td>
                            @Html.DisplayFor(Trening => vezba.Rekviziti)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>