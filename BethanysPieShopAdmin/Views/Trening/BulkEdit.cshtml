@model List<TreningBulkEditViewModel>

<h2>Bulk edit pies</h2>
<hr />

<form asp-action="BulkEdit" method="post">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="mb-3">
            <label asp-for="@Model[i].TreningId" class="form-label"></label>
            <input asp-for="@Model[i].TreningId" class="form-control" readonly="readonly" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model[i].TreningName" class="form-label"></label>

            <input asp-for="@Model[i].TreningName" class="form-control" />
            <span asp-validation-for="@Model[i].TreningName" class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>